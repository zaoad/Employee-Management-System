<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UpdateEmployee">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/update_employee"
                    android:textColor="@color/Blue"
                    android:textSize="30sp"
                    android:elevation="4dp"
                    android:fontFamily="@font/titillium_semibold"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/picture"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/profile_icon"/>
            <Button
                android:id="@+id/change_photo_btn"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Upload photo"
                android:textColor="@color/white"
                android:fontFamily="@font/titillium_semibold"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/button_round_blue"/>
            <TextView
                android:layout_marginTop="30dp"
                android:id="@+id/id_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID : "
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/titillium_regular"
                android:gravity="center"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/hintColor"
                app:hintTextAppearance="@style/HintText"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/name_edt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Name"
                    android:backgroundTint="@color/Blue"
                    android:fontFamily="@font/titillium_regular"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textColor="@color/black"
                    android:gravity="center"
                    />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/hintColor"
                app:hintTextAppearance="@style/HintText"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/age_edt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Age"
                    android:inputType="number"
                    android:backgroundTint="@color/Blue"
                    android:fontFamily="@font/titillium_regular"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textColor="@color/black"
                    android:gravity="center"
                    />

            </com.google.android.material.textfield.TextInputLayout>
            <Spinner
                android:layout_marginTop="15dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:layout_gravity="center"
                android:spinnerMode="dropdown"
                />
            <Button
                android:id="@+id/add_employee_btn"
                android:layout_marginTop="25dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Update"
                android:textColor="@color/white"
                android:fontFamily="@font/titillium_semibold"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/button_round"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>